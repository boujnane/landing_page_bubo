---
// components/Timeline.astro
const { events } = Astro.props;
---

<div class="timeline">
  <div class="timeline-line"></div> <!-- Central connecting line -->
  {events.map((event: { date: string; title: string; description: string; }, index: number) => (
    <div class={`timeline-item ${index % 2 === 0 ? 'left' : 'right'}`}>
      <div class="timeline-date-wrapper">
        <div class="timeline-date">{event.date}</div>
        <div class="timeline-dot"></div> <!-- Small orange dot -->
      </div>
      <div class="timeline-content">
        <h3 class="timeline-title">{event.title}</h3>
        <p class="timeline-description">{event.description}</p>
      </div>
    </div>
  ))}
</div>

<style>
.timeline {
  position: relative;
  padding: 20px 0;
  max-width: 1200px; 
  margin: 0 auto; 
}

.timeline-line {
  position: absolute;
  left: 50%; 
  top: 10%; 
  bottom: 0; 
  width: 4px; 
  background-color: orange; 
  transform: translateX(-50%); 
}

.timeline-item {
  margin: 60px 0; 
  position: relative;
  display: flex; 
  align-items: flex-start; 
}

.timeline-item.left {
  flex-direction: row; 
}

.timeline-item.right {
  flex-direction: row-reverse; 
}

.timeline-date-wrapper {
  display: flex;
  flex-direction: column; 
  align-items: center; 
  position: relative;
  margin: 0 20px; 
}

.timeline-date {
  font-weight: bold;
  font-size: 0.8rem; 
  color: #4a4a4a; 
  padding: 5px 0; 
}

.timeline-dot {
  width: 12px; 
  height: 12px; 
  background-color: orange; 
  border-radius: 50%; 
  position: absolute;
  top: 80%; 
  left: calc(50% - 6px); 
  transform: translateX(-50%); 
}

.timeline-content {
  padding-left: 50px;
  padding-right: 50px;
  transition: transform 0.2s ease;
  max-width: 35%;
}

.timeline-title {
  font-size: 1.1rem;
}

.timeline-description {
  font-size: 0.7rem;
  color: #6b7280;
  word-wrap: break-word; /* Pour le wrap du texte */
  overflow-wrap: break-word; /* Compatibilit√© avec les navigateurs modernes */
}

.timeline-item:hover .timeline-content {
  transform: scale(1.02); 
}
</style>
