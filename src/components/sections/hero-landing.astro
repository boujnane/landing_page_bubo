---
import { cn } from "@/lib/utils";
import { buttonVariants } from "@/components/ui/button";
import { Icon } from "astro-icon/components";
import { siteConfig } from "@/config/site";
---

<section class="space-y-6 py-12 sm:py-20 lg:py-20">
  <div class="container flex max-w-5xl flex-col items-center gap-5 text-center">
    <h1 class="text-balance font-heading text-4xl sm:text-5xl md:text-6xl lg:text-[66px]">
      Soar to new heights with{" "}
      <span class="bg-gradient-to-r from-orange-600 to-yellow-300 bg-clip-text text-transparent font-extrabold">
        Bubo Team
      </span>
    </h1>

    <p class="max-w-2xl text-balance leading-normal text-muted-foreground sm:text-xl sm:leading-8">
      We offer :
    </p>

    <!-- Remplacement de la liste par des divs et p -->
    <div class="max-w-2xl space-y-3 text-muted-foreground sm:text-xl sm:leading-8">
      <div class="bullet-item">
        <p>
          <div class="inline-flex items-center">
            <div class="be_blur">State-of-the-art</div>
            <strong class="zoom-effect">Data & AI consulting</strong>
          </div>
        </p>
      </div>
      <div class="bullet-item">
        <p>
          <div class="inline-flex items-center">
            <strong class="zoom-effect">Tailor-made</strong>
            <div class="be_blur">software development</div>
          </div>
        </p>
      </div>
      <div class="bullet-item">
        <p>
          <div class="inline-flex items-center">
            <div class="be_blur">Innovative and useful</div>
            <strong class="zoom-effect">products</strong>
            <div class="be_blur">to help your project take flight.</div>
          </div>
        </p>
      </div>
    </div>

    <div class="flex justify-center space-x-2 md:space-x-4">
      <a href="/requestaquote" class={cn(buttonVariants({ size: "lg", rounded: "full" }), "gap-2")}>
        <span>Request a Quote</span>
        <Icon name="lucide:rocket" class="size-5 text-orange-500" />
      </a>
    </div>
  </div>
</section>

<style>
.zoom-effect {
  display: inline-block;
  font-weight: bolder;
  font-size: x-large;
  transition: transform 0.3s ease, color 0.3s ease;
  cursor: pointer;
  z-index: 1;
}

.zoom-effect:hover {
  transform: scale(1.3);
  color: #ff6700;
  filter: none; /* Retire le flou de l'élément zoomé */
}

.bullet-item:hover .be_blur {
  filter: blur(4px);
  opacity: 0.5;
}

.bullet-item:hover:not(:has(.zoom-effect:hover)) {
  opacity: 0.5;
  filter: blur(4px);
}

.bullet-item p {
  display: block;
}

.bullet-item .inline-flex {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
}

</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const bulletItems = document.querySelectorAll(".bullet-item");
    const zoomEffectItems = document.querySelectorAll(".zoom-effect");

    bulletItems.forEach(item => {
      const bulletItem = item as HTMLElement;

      item.addEventListener("mouseover", function () {
        bulletItems.forEach(bullet => {
          const bulletElement = bullet as HTMLElement;
          if (!bulletElement.contains(item)) {
            bulletElement.style.opacity = "0.5";
            bulletElement.style.filter = "blur(4px)";
          }
        });
      });

      item.addEventListener("mouseleave", function () {
        bulletItems.forEach(bullet => {
          const bulletElement = bullet as HTMLElement;
          bulletElement.style.opacity = "1";  // Réinitialise l'opacité
          bulletElement.style.filter = "none";  // Supprime le flou
        });
      });
    });

    zoomEffectItems.forEach(item => {
      const zoomItem = item as HTMLElement;

      zoomItem.addEventListener("mouseenter", function () {
        zoomItem.style.zIndex = "10";
      });

      zoomItem.addEventListener("mouseleave", function () {
        zoomItem.style.zIndex = "1";
      });
    });
  });
</script>
