---
import { t, changeLanguage } from "i18next";
// import BlogCard from "@/components/cards/blog-card.astro";
import BlogHeader from "@/components/blog-header.astro";
import BlogCard from "@/components/cards/blog-card.astro";
import HeaderSection from "@/components/sections/header-section.astro";
import Timeline from "@/components/Timeline.astro";
import { navMenuConfig } from "@/config/nav-menu";
import MainLayout from "@/layouts/main-layout.astro";
import { getPosts } from "@/lib/fetchers";

changeLanguage("en");

const examples = navMenuConfig.examplesNav[0].items;
const posts = await getPosts();
const events = [
    { date: "2017-01-01", title: "Creation of the company", description: "The beginning of our journey." },
    { date: "2020-02-14", title: "First Huge Contract", description: "Securing our first major partnership." },
    { date: "2021-03-17", title: "CIR/CII approval", description: "Achieving CIR/CII accreditation for research and innovation." },
    { date: "2022-10-31", title: "Expand to Cameroon", description: "Expanding operations to Cameroon, embracing new opportunities." },
    { date: "2023-12-25", title: "First prize - B\u00E2tisseurs Africains", description: "Winning the B\u00E2tisseurs Africains award, a recognition of our impact." },
    { date: "2024-11-09", title: "Participation in JNDA", description: "Participating in the Journ\u00E9e Nationale de la Diaspora Africaine as an exhibitor." }
    // Add more events as needed
];
---

<MainLayout title="About" description="A descriptive page for the company">
    <section class="container py-16">
        <!-- Main Text Section -->
        <div class="text-center mb-12 md:mb-20 px-4">
            <h2 class="text-xl font-semibold mb-6">
              𝙱𝚞𝚋𝚘 𝚋𝚞𝚋𝚘 ({t('accelerate.subtitle')})
            </h2>
            <p class="text-sm mb-8 max-w-3xl mx-auto leading-relaxed text-justify">
              <em>{t('accelerate.title')}</em>
            </p>
            
            <ul class="text-sm mb-8 max-w-3xl mx-auto leading-relaxed list-disc pl-8 text-justify">
              <li><strong>{t('accelerate.part1')}<span class="font-semibold">Bubo</span></strong>{t('accelerate.part2')}<strong>{t('accelerate.part3')}</strong>{t('accelerate.part4')}</li>
            </br>
              <li><strong><span class="font-semibold">{t('accelerate.part5')}</span></strong>{t('accelerate.part6')}<strong>{t('accelerate.part7')}</strong>{t('accelerate.part8')}</li>
            </br>
              <li><strong>{t('accelerate.part9')}</strong>{t('accelerate.part10')}<strong>{t('accelerate.part11')}</strong>{t('accelerate.part12')}<strong>{t('accelerate.part13')}</strong>{t('accelerate.part14')}</li>
            </ul>
          
            <blockquote class="text-sm mb-8 max-w-3xl mx-auto leading-relaxed italic border-l-4 pl-4 border-orange-500 text-justify">
              {t('accelerate.part15')}<strong>{t('accelerate.part16')}</strong>.
            </blockquote>
          </div>
          
        
    
        <!-- Timeline Section -->
        <HeaderSection
          label="Timeline"
          title={t('timeline.title') as string}
        />
        <Timeline events={events.map(event => ({
          date: event.date,
          title: t(`timeline.events.${event.date}.title`),
          description: t(`timeline.events.${event.date}.description`)
        }))} />
      </section>
</MainLayout>


