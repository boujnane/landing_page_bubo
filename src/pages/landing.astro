---
import { changeLanguage } from "i18next";
import BentoGrid from "@/components/sections/bentogrid.astro";
import Features from "@/components/sections/features.astro";
import HeaderSection from "@/components/sections/header-section.astro";
import HeroLanding from "@/components/sections/hero-landing.astro";
import InfoLanding from "@/components/sections/info-landing.astro";
// import PreviewLanding from "@/components/sections/preview-landing.astro";
import Testimonials from "@/components/sections/testimonials.astro";
import { infos } from "@/config/landing";
import MainLayout from "@/layouts/main-layout.astro";

changeLanguage("en");
---

<MainLayout title="Landing">
  <HeroLanding />
  <BentoGrid />
  <HeaderSection
    label="Products"
    title="Discover all products."
    subtitle="Harum quae dolore inventore repudiandae? orrupti aut temporibus ariatur."
  />
  <InfoLanding data={infos[0]} reverse={true} />
  <InfoLanding data={infos[1]} />
  <InfoLanding data={infos[2]} reverse={true} />
  <Features />
  <Testimonials />
</MainLayout>
