---
import { t, changeLanguage } from "i18next";
import MainLayout from "@/layouts/main-layout.astro";
import { Image } from "astro:assets";
import { hobbies } from "@/config/about.ts";
import { values } from "@/config/values.ts";

changeLanguage("en");
---

<MainLayout title="Our Values" description="Découvrez les valeurs qui nous animent chez Bubo">
    <section class="space-y-12 py-16">
        <div class="container mx-auto max-w-6xl px-4 md:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-center mb-8 text-primary">{t("common.our_values")}</h2>
            <div class="container mx-auto flex flex-wrap justify-around gap-6">
              {values.map((value, index) => (
                <div class="btn" key={index}>
                  <a href="#">
                    <div class="flex flex-col items-center ">
                      <span class="text-black dark:text-white">{t(value.title)}</span>
                      <small class="text-xs mt-1 opacity-70 text-black dark:text-white">{t(value.description)}</small>
                    </div>
                  </a>
                </div>
              ))}
            </div>
          </div>
      <div class="relative z-10 flex flex-col justify-center overflow-hidden lg:overflow-visible pb-16 mt-20">
        <div class="mx-auto flex w-max -translate-x-[15%] justify-center lg:w-full lg:translate-x-0">
            
          <div class="relative z-10 mx-auto max-w-4xl px-4 md:max-w-6xl md:px-12 lg:max-w-5xl lg:px-6 xl:max-w-[80rem] xl:px-6 2xl:px-0">
            <h2 class="text-3xl font-bold text-center mb-8 text-primary">{t("common.our_moments")}</h2>
            <div class="grid grid-cols-4 items-center gap-4 md:gap-6">
              {/* Première colonne */}
              <div class="space-y-4 md:space-y-6">
                <div class="h-52 overflow-hidden rounded-xl transform transition-all duration-300 hover:scale-105">
                  <Image
                    class="w-full h-full object-cover"
                    src={hobbies[9].image}
                    alt={hobbies[9].alt}
                    width={800}
                    height={1334}
                  />
                </div>
                <Image
                  class="h-full w-auto object-cover overflow-hidden rounded-xl transform transition-all duration-300 hover:scale-105"
                  src={hobbies[0].image}
                  alt={hobbies[0].alt}
                  width={800}
                  height={1226}
                  loading="eager"
                />
                <div class="h-52 overflow-hidden rounded-xl transform transition-all duration-300 hover:scale-105">
                  <Image
                    class="w-full h-full object-cover"
                    src={hobbies[1].image}
                    alt={hobbies[1].alt}
                    width={800}
                    height={1334}
                  />
                </div>
              </div>
      
              {/* Deuxième colonne */}
              <div class="space-y-4 md:space-y-6">
                <div class="h-48 overflow-hidden rounded-xl transform transition-all duration-300 hover:scale-105">
                  <Image
                    class="w-full h-full object-cover"
                    src={hobbies[2].image}
                    alt={hobbies[2].alt}
                    width={800}
                    height={983}
                    loading="eager"
                  />
                </div>
                <Image
                  class="rounded-xl transform transition-all duration-300 hover:scale-105"
                  src={hobbies[3].image}
                  alt={hobbies[3].alt}
                  width={800}
                  height={1108}
                  loading="eager"
                />
                <div class="relative h-48 overflow-hidden rounded-xl transform transition-all duration-300 hover:scale-105">
                  <Image
                    class="w-full h-full object-cover"
                    src={hobbies[4].image}
                    alt={hobbies[4].alt}
                    width={1260}
                    height={750}
                  />
                </div>
              </div>
      
              {/* Troisième colonne */}
              <div class="space-y-4 md:space-y-6">
                <div class="h-56 overflow-hidden rounded-xl transform transition-all duration-300 hover:scale-105">
                  <Image
                    class="w-full h-full object-cover"
                    src={hobbies[5].image}
                    alt={hobbies[5].alt}
                    width={800}
                    height={1334}
                    loading="eager"
                  />
                </div>
                <div class="h-80 w-full overflow-hidden rounded-xl xl:h-[28rem] transform transition-all duration-300 hover:scale-105">
                  <Image
                    class="w-full h-full object-cover"
                    src={hobbies[6].image}
                    alt={hobbies[6].alt}
                    width={801}
                    height={2477}
                  />
                </div>
              </div>
      
              {/* Quatrième colonne */}
              <div class="space-y-4 md:space-y-6">
                <div class="overflow-hidden rounded-xl bg-white transform transition-all duration-300 hover:scale-105">
                  <Image
                    src={hobbies[7].image}
                    alt={hobbies[7].alt}
                    width={800}
                    height={900}
                    loading="eager"
                  />
                </div>
                <div class="overflow-hidden rounded-xl bg-white transform transition-all duration-300 hover:scale-105">
                  <Image
                    src={hobbies[8].image}
                    alt={hobbies[8].alt}
                    width={800}
                    height={900}
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      
    </section>
  </MainLayout>
  

  <style>
    .container {
      width: 100%;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      gap: 1.5rem;
    }

    .container .btn {
      position: relative;
      display: inline-flex;
      justify-content: center;
      align-items: center;
      margin: 0.5rem;
    }

    .container .btn a {
      max-width: 440px;
      word-wrap: break-word;
      height: auto; /* pas de hauteur fixe */
      white-space: normal; /* autorise le texte à aller à la ligne */
      word-wrap: break-word; /* coupe proprement les longs mots */
      text-align: center;
      position: relative;
      display: inline-flex;
      justify-content: center;
      align-items: center;
      background: rgba(255, 255, 255, 0.05);
      box-shadow: 0 15px 15px rgba(0, 0, 0, 0.3);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 30px;
      padding: 12px 24px;
      text-decoration: none;
      color: #fff;
      font-weight: 400;
      letter-spacing: 1px;
      overflow: hidden;
      z-index: 1;
      transition: 0.5s;
      backdrop-filter: blur(15px);
    }

    .container .btn a::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 50%;
      height: 100%;
      background: linear-gradient(to left, rgba(255, 255, 255, 0.15), transparent);
      transform: skewX(45deg) translate(0);
      transition: 0.5s;
      filter: blur(0px);
    }

    .container .btn:hover a::before {
      transform: skewX(45deg) translate(200px);
    }

    /* Light-up border */
    .container .btn::before,
    .container .btn::after {
      content: "";
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      width: 30px;
      height: 10px;
      border-radius: 10px;
      transition: 0.5s;
      transition-delay: 0.5s;
    }

    .container .btn::before {
      bottom: -5px;
    }

    .container .btn:hover::before {
      bottom: 0;
      height: 50%;
      width: 100%;
      border-radius: 30px;
    }

    .container .btn::after {
      top: -5px;
    }

    .container .btn:hover::after {
      top: 0;
      height: 50%;
      width: 100%;
      border-radius: 30px;
    }

    /* Button glow colors */
    .container .btn:nth-child(1)::before,
    .container .btn:nth-child(1)::after {
      background: #ff4d4d;
      box-shadow:
        0 0 10px 4px #ff4d4d,
        0 0 30px 10px #ff4d4d,
        0 0 60px 20px #ff4d4d;
    }

    .container .btn:nth-child(2)::before,
    .container .btn:nth-child(2)::after {
      background: #005577;
      box-shadow:
        0 0 10px 4px #005577,
        0 0 30px 10px #005577,
        0 0 60px 20px #005577;
    }

    .container .btn:nth-child(3)::before,
    .container .btn:nth-child(3)::after {
      background: #fc8300;
      box-shadow:
        0 0 10px 4px #fc8300,
        0 0 30px 10px #fc8300,
        0 0 60px 20px #fc8300;
    }
  </style>