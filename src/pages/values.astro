---
import MainLayout from "@/layouts/main-layout.astro";
import { Image } from "astro:assets";
import { hobbies } from "@/config/about.ts";
import { Star, Heart, Bolt } from "lucide-react"; // Importation des icônes de lucide-react
import { values } from "@/config/values.ts"; // Importation des valeurs depuis votre fichier values.ts
---

<MainLayout title="Nos Valeurs" description="Découvrez les valeurs qui nous animent chez Bubo">
    <section class="space-y-12 py-16">
        <div class="container mx-auto max-w-6xl px-4 md:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-center mb-8 text-primary">Nos Valeurs</h2>
            <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
              {values.map((value, index) => (
                <div
                  class="flex flex-col items-center p-6 rounded-lg shadow-md transition-all duration-300 bg-gradient-to-b hover:scale-105 hover:opacity-90"
                  style={{
                    background: value.icon === "Star"
                      ? "linear-gradient(135deg, #f0e6d2, #d3b992)"
                      : value.icon === "Heart"
                      ? "linear-gradient(135deg, #e3e8f1, #b8c2d0)"
                      : "linear-gradient(135deg, #e9e4f0, #c4a4d4)",
                    boxShadow: "0px 4px 12px rgba(0, 0, 0, 0.1)",
                  }}
                >
                  {/* Icônes dynamiques avec styles améliorés */}
                  {value.icon === "Star" && (
                    <Star className="w-10 h-10 text-gray-800 mb-4 opacity-80 hover:scale-110 hover:text-yellow-500 transition-transform" />
                  )}
                  {value.icon === "Heart" && (
                    <Heart className="w-10 h-10 text-gray-800 mb-4 opacity-80 hover:scale-110 hover:text-red-500 transition-transform" />
                  )}
                  {value.icon === "Bolt" && (
                    <Bolt className="w-10 h-10 text-gray-800 mb-4 opacity-80 hover:scale-110 hover:text-blue-500 transition-transform" />
                  )}
                  
                  <h3 class="text-xl font-medium text-gray-900 mb-2">{value.title}</h3>
                  <p class="text-gray-700 text-center md:text-justify">{value.description}</p>
                </div>
              ))}
            </div>
          </div>
      <div class="relative z-10 flex flex-col justify-center overflow-hidden lg:overflow-visible pb-16 mt-20">
        <div class="mx-auto flex w-max -translate-x-[15%] justify-center lg:w-full lg:translate-x-0">
            
          <div class="relative z-10 mx-auto max-w-4xl px-4 md:max-w-6xl md:px-12 lg:max-w-5xl lg:px-6 xl:max-w-[80rem] xl:px-6 2xl:px-0">
            <h2 class="text-3xl font-bold text-center mb-8 text-primary">Nos Moments</h2>
            <div class="grid grid-cols-4 items-center gap-4 md:gap-6">
              {/* Première colonne */}
              <div class="space-y-4 md:space-y-6">
                <Image
                  class="h-full w-auto object-cover overflow-hidden rounded-xl transform transition-all duration-300 hover:scale-105"
                  src={hobbies[0].image}
                  alt={hobbies[0].alt}
                  width={800}
                  height={1226}
                  loading="eager"
                />
                <div class="h-52 overflow-hidden rounded-xl transform transition-all duration-300 hover:scale-105">
                  <Image
                    class="w-full h-full object-cover"
                    src={hobbies[1].image}
                    alt={hobbies[1].alt}
                    width={800}
                    height={1334}
                  />
                </div>
              </div>
      
              {/* Deuxième colonne */}
              <div class="space-y-4 md:space-y-6">
                <div class="h-48 overflow-hidden rounded-xl transform transition-all duration-300 hover:scale-105">
                  <Image
                    class="w-full h-full object-cover"
                    src={hobbies[2].image}
                    alt={hobbies[2].alt}
                    width={800}
                    height={983}
                    loading="eager"
                  />
                </div>
                <Image
                  class="rounded-xl transform transition-all duration-300 hover:scale-105"
                  src={hobbies[3].image}
                  alt={hobbies[3].alt}
                  width={800}
                  height={1108}
                  loading="eager"
                />
                <div class="relative h-48 overflow-hidden rounded-xl transform transition-all duration-300 hover:scale-105">
                  <Image
                    class="w-full h-full object-cover"
                    src={hobbies[4].image}
                    alt={hobbies[4].alt}
                    width={1260}
                    height={750}
                  />
                </div>
              </div>
      
              {/* Troisième colonne */}
              <div class="space-y-4 md:space-y-6">
                <div class="h-56 overflow-hidden rounded-xl transform transition-all duration-300 hover:scale-105">
                  <Image
                    class="w-full h-full object-cover"
                    src={hobbies[5].image}
                    alt={hobbies[5].alt}
                    width={800}
                    height={1334}
                    loading="eager"
                  />
                </div>
                <div class="h-80 w-full overflow-hidden rounded-xl xl:h-[28rem] transform transition-all duration-300 hover:scale-105">
                  <Image
                    class="w-full h-full object-cover"
                    src={hobbies[6].image}
                    alt={hobbies[6].alt}
                    width={801}
                    height={2477}
                  />
                </div>
              </div>
      
              {/* Quatrième colonne */}
              <div class="space-y-4 md:space-y-6">
                <div class="overflow-hidden rounded-xl bg-white transform transition-all duration-300 hover:scale-105">
                  <Image
                    src={hobbies[7].image}
                    alt={hobbies[7].alt}
                    width={800}
                    height={900}
                    loading="eager"
                  />
                </div>
                <div class="overflow-hidden rounded-xl bg-white transform transition-all duration-300 hover:scale-105">
                  <Image
                    src={hobbies[8].image}
                    alt={hobbies[8].alt}
                    width={800}
                    height={900}
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      
    </section>
  </MainLayout>
  